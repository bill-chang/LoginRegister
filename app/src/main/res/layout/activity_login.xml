<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nb"
    tools:context=".Login">

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login App"
        android:textSize="35dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="50dp"
        android:textColor="#ff0"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/create_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Create New Account"
        android:textStyle="italic"
        android:textColor="#ff1"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/Login_Email_et"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/Login_Pw_et"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="PassWord"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/Login_bt"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:text="Login"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/Login_click_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User?Click here!"
        android:textColor="@color/blue"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/forgetPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="ForgetPassword?click here!"
        android:textColor="@color/blue"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
    />
    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="190dp"
        android:visibility="invisible"
        />





</LinearLayout>